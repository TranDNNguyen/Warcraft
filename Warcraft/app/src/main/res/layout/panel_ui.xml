<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:weightSum="1"
    android:orientation="horizontal">
    >



    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="#7f8287"
        >

        <ImageView
            android:id="@+id/minimapView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"

            android:background="#0a581b"
            android:padding="10px"

            android:scaleType="centerInside"

            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:background="#7f8287"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/minimapView">

            <ImageButton
                android:id="@+id/AssetImageBtn"
                android:layout_width="100px"
                android:layout_height="100px"
                android:scaleType="fitCenter"
                android:background="#00ffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </FrameLayout>
        <GridLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"

            android:columnCount="3"
            android:rowCount="3"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/actionBtn1"
                android:layout_column="0"
                android:layout_row="0"

                android:text="1"
                />
            <ImageButton
                android:id="@+id/actionBtn2"
                android:layout_column="1"
                android:layout_row="0"
                android:text="2"
                />

            <ImageButton
                android:layout_column="2"
                android:layout_row="0"
                android:id="@+id/actionBtn3"

                android:text="3"/>

            <ImageButton
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/actionBtn4"

                android:text="4"/>
            <ImageButton
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/actionBtn5"

                android:text="5"/>
            <ImageButton
                android:layout_column="2"
                android:layout_row="1"
                android:id="@+id/actionBtn6"

                android:text="6"/>
            <ImageButton
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/actionBtn7"

                android:text="7"/>
            <ImageButton
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/actionBtn8"

                android:text="8"/>

            <ImageButton
                android:layout_column="2"
                android:layout_row="2"
                android:id="@+id/actionBtn9"

                android:text="9"/>

        </GridLayout>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8" />

</LinearLayout>

