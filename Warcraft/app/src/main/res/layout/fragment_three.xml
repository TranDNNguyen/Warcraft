<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/AssetImageBtn"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@null" />


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ffffff"

        android:columnCount="13"
        android:rowCount="4"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/actionBtn1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@null"
            android:text="1" />

        <ImageButton
            android:id="@+id/actionBtn2"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@null"
            android:text="2" />

        <ImageButton
            android:id="@+id/actionBtn3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@null"
            android:text="3" />

        <ImageButton
            android:id="@+id/actionBtn4"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@null"
            android:text="4" />

        <ImageButton
            android:id="@+id/actionBtn5"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@null"
            android:text="5" />

        <ImageButton
            android:id="@+id/actionBtn6"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@null"
            android:text="6" />

        <ImageButton
            android:id="@+id/actionBtn7"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@null"
            android:text="7" />

        <ImageButton
            android:id="@+id/actionBtn8"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@null"
            android:text="8" />

        <ImageButton
            android:id="@+id/actionBtn9"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/barracks"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="3"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/blacksmith"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="4"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />
        <ImageButton
            android:id="@+id/cannon_tower"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="5"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />
        <ImageButton
            android:id="@+id/castle"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="6"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/farm"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="7"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/guard_tower"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="8"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/keep"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="9"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/lumber_mill"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="10"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/scout_tower"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="11"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

        <ImageButton
            android:id="@+id/town_hall"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_column="12"
            android:layout_row="2"
            android:background="@null"
            android:text="9" />

    </GridLayout>

</LinearLayout>

