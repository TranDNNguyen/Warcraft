<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <ImageView
        android:id="@+id/viewportView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="#000000"
        android:padding="0px"       />


    <ImageView
        android:id="@+id/minimapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:background="#0a581b"
        android:padding="10px"

        android:scaleType="centerInside"
        android:visibility="invisible"
        />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.android.ecs160.warcraft.FragmentThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/minimapView"
        android:layout_alignParentLeft="true"
        android:background="#00ffffff"

        />

    <TextView
        android:id="@+id/xyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/viewportView"
        android:background="#AA0000"
        android:padding="10px"
        android:text="X and Y Coordinate"


        android:visibility="invisible"

        />



</RelativeLayout>