<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_viewport">


    <!--  CustomView - ViewportView  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewportView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_margin="20px"
                android:maxWidth="1000px"

                android:maxHeight="600px"
                android:scaleType="centerInside"
                android:visibility="visible"

                />

            <ImageView
                android:id="@+id/minimapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_margin="20px"
                android:maxWidth="100px"

                android:maxHeight="100px"
                android:scaleType="centerInside"
                android:visibility="visible"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/xyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X and Y Coordinate" />


    </LinearLayout>


</FrameLayout>