<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_viewport">


    <!--  CustomView - ViewportView  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewportView"
                android:maxWidth="1000px"
                android:maxHeight="600px"
                android:layout_width="1000px"
                android:layout_height="600px"
                android:layout_gravity="left|top"
                android:layout_margin="20px"
                android:scaleType="centerInside"
                android:visibility="visible"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/minimapView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_margin="20px"
                    android:maxWidth="100px"

                    android:maxHeight="100px"
                    android:scaleType="centerInside"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/moveBtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Move!" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Cancel" />


                <TextView
                    android:id="@+id/tutorialTextView"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To select asset, tap it \n\nTo pan the map, drag the screen with two fingers." />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/xyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X and Y Coordinate" />


    </LinearLayout>


</FrameLayout>